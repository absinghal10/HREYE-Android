<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#004F81" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="@dimen/margin_top" />
            <padding
                android:left="@dimen/margin_top"
                android:top="@dimen/margin_top"
                android:right="@dimen/margin_top"
                android:bottom="@dimen/margin_top" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimary"
                android:endColor="@color/blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/DarkBlue" />
            <corners
                android:radius="@dimen/margin_top" />
            <padding
                android:left="@dimen/margin_top"
                android:top="@dimen/margin_top"
                android:right="@dimen/margin_top"
                android:bottom="@dimen/margin_top" />
        </shape>
    </item>
</selector>