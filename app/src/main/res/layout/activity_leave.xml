                            android:visibility="visible"
                            app:tint="@color/black" />

                    </LinearLayout>-->

                    <Button
                        android:id="@+id/btn_lv_apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_button"
                        android:padding="@dimen/margin_top"
                        android:text="@string/apply_leave"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text"
                        android:textAllCaps="false" />

                </LinearLayout>
            </LinearLayout>


     <!--   <ImageView
            android:id="@+id/iv_upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_plus"
            android:layout_marginBottom="@dimen/margin_plus"
            android:background="@mipmap/upload_icon"
            android:visibility="visible" />-->

    </RelativeLayout>
    </ScrollView>
</LinearLayout>
